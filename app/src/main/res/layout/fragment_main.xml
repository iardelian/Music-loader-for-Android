<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/progress"
        android:visibility="invisible"
        android:layout_alignLeft="@+id/btnSearch"
        android:layout_alignStart="@+id/btnSearch"
        android:layout_alignTop="@+id/btnSearch"
        android:layout_alignBottom="@+id/btnSearch"
        android:layout_alignRight="@+id/btnSearch"
        android:layout_alignEnd="@+id/btnSearch" />

<ImageButton
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:id="@+id/btnSearch"
android:src="@drawable/ic_search"
style="@style/ButtonList"
android:layout_alignParentRight="true"
android:layout_alignParentEnd="true"
    android:elevation="8dp"
    android:contentDescription="@string/Searchbtn" />


    <EditText
android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_above="@+id/listView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:inputType="text"/>

<ListView
android:id="@+id/listView"
android:layout_width="match_parent"
android:layout_height="30dp"
android:layout_alignStart="@+id/search"
android:layout_alignLeft="@+id/search"
android:layout_below="@+id/btnSearch"
android:layout_alignParentBottom="true">
</ListView>




</RelativeLayout>